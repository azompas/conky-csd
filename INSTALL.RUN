#! /bin/bash

echo "Installing..."

if [ -d ~/.conky_csd ]
then
	echo "deleting old files"
	rm -rf ~/.conky_csd
fi

mkdir ~/.conky_csd
echo "hidden folder \".conky_csd\" has been created"
echo "moving files"
cp ./bash.sh ~/.conky_csd/
cp ./conkyrcCSD ~/.conky_csd/

echo "Done Install!" 

echo 
echo "Run \"conky -d -c ~/.conky_csd/conkyrcCSD\" "



